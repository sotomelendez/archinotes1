- extends 'editor_base.jade'
- load i18n

- block project_content
    .panel.panel-default.panel-projects(style='height:500px;')
        .panel-body
            div#sidebar(style='float:right;')
                form(id='addComp')
                    button(type='submit')
                        svg(width='20', height='20')
                            img(width='100', height='50', src='/static/archinotes/img/svg/icon_model_component_orange.svg')

            div#center
                span#c1(style='display:inline-block;')
                    img(style='z-index:-1;', src='/static/archinotes/img/svg/icon_model_component_orange.svg')
                    p(style='position:relative; left:40px; bottom:45px;') Component1



                span#c2(style='display:inline-block;')
                    img(style='z-index:-1;', src='/static/archinotes/img/svg/icon_model_component_orange.svg')
                    p(style='position:relative; left:40px; bottom:45px;') Component2

-block js
    script(type="text/javascript")
        $(function() {
            $('#simple-menu').sidr();
            $( "#c1" ).draggable();
            $( "#c2" ).draggable();
            $( "#c3" ).draggable();
            $( "#c4" ).draggable();
        });
        $( "#addComp").submit(function( event ) {
            event.preventDefault();
            var content = $("<span style='display:inline-block;'><img style='z-index:-1;' src='/static/archinotes/img/svg/icon_model_component_orange.svg' /><p style='position:relative; left:40px; bottom:45px;'>Component"+($("#center").children().length+1)+"</p></span>");
            $(content).tooltip();
            $(content).draggable();
            $( "#center" ).append($(content));
        });
