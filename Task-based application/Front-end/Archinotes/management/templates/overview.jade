- extends 'mgmt_base.jade'
- load i18n

- block project_content
    .panel.panel-default
        .panel-body.panel-projects.big-panel
            -if error
                .alert.alert-warning.text-center
                    strong {% trans 'Warning!' %}
                    |  {% trans 'The information you are looking for cannot be found.' %} {{error}}
            form#id_overview_form(action="{% url 'mgmt:overview' project_name %}", method="post")
                -csrf_token
                .row
                    .col-md-6
                        h4.harabara.text-center {% trans "Project background" %}
                        {{ form.background }}
                    .col-md-6
                        h4.harabara.text-center {% trans "Purpose and scope" %}
                        {{ form.purpose_scope }}
                .row
                    .col-md-12
                        h4.harabara.text-center {% trans "System overview" %}
                        {{ form.overview }}
                .row
                    .col-md-12.text-center.bottom-margin
                        input.btn.btn-success(type="submit", value="{% trans 'Save' %}")

- block js
    script(type="text/javascript", src="/static/archinotes/js/overview.js")
